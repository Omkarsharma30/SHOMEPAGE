<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <!-- Custom Error Pages -->
    <httpErrors errorMode="Custom" defaultResponseMode="File">
      <remove statusCode="404" subStatusCode="-1" />
      <error statusCode="404" path="/404.html" responseMode="File" />
    </httpErrors>

    <!-- URL Redirects -->
    <rewrite>
      <rules>
        <!-- Common redirects -->
        <rule name="Tools Redirect" stopProcessing="true">
          <match url="^tools/?$" />
          <action type="Redirect" url="/index.html#tools" redirectType="Permanent" />
        </rule>
        <rule name="Courses Redirect" stopProcessing="true">
          <match url="^courses/?$" />
          <action type="Redirect" url="/index.html#courses" redirectType="Permanent" />
        </rule>
        <rule name="About Redirect" stopProcessing="true">
          <match url="^about/?$" />
          <action type="Redirect" url="/index.html#about" redirectType="Permanent" />
        </rule>
        <rule name="Contact Redirect" stopProcessing="true">
          <match url="^contact/?$" />
          <action type="Redirect" url="/index.html#contact" redirectType="Permanent" />
        </rule>

        <!-- Tool-specific redirects -->
        <rule name="PDF Redirect" stopProcessing="true">
          <match url="^pdf/?$" />
          <action type="Redirect" url="/PDF_MERGE/index.html" redirectType="Permanent" />
        </rule>
        <rule name="Password Redirect" stopProcessing="true">
          <match url="^password/?$" />
          <action type="Redirect" url="/PASSWORD_GENERATOR/index.html" redirectType="Permanent" />
        </rule>
        <rule name="QR Code Redirect" stopProcessing="true">
          <match url="^qr-code/?$" />
          <action type="Redirect" url="/qr/index.html" redirectType="Permanent" />
        </rule>
        <rule name="Color Redirect" stopProcessing="true">
          <match url="^color/?$" />
          <action type="Redirect" url="/COLOR_PICKER/index.html" redirectType="Permanent" />
        </rule>
        <rule name="Text Redirect" stopProcessing="true">
          <match url="^text/?$" />
          <action type="Redirect" url="/text_editor/index.html" redirectType="Permanent" />
        </rule>
        <rule name="Unit Redirect" stopProcessing="true">
          <match url="^unit/?$" />
          <action type="Redirect" url="/UNIT_CONVERTER/index.html" redirectType="Permanent" />
        </rule>

        <!-- Force HTTPS (uncomment when using SSL) -->
        <!-- 
        <rule name="Force HTTPS" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTPS}" pattern="^OFF$" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" redirectType="Permanent" />
        </rule>
        -->
      </rules>
    </rewrite>

    <!-- Static Content Caching -->
    <staticContent>
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="30.00:00:00" />
    </staticContent>

    <!-- Compression -->
    <urlCompression doDynamicCompression="true" doStaticCompression="true" />

    <!-- Security Headers -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="DENY" />
        <add name="X-XSS-Protection" value="1; mode=block" />
        <add name="Strict-Transport-Security" value="max-age=63072000; includeSubDomains; preload" />
        <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />
      </customHeaders>
    </httpProtocol>

    <!-- MIME Types -->
    <staticContent>
      <mimeMap fileExtension=".woff2" mimeType="font/woff2" />
      <mimeMap fileExtension=".json" mimeType="application/json" />
    </staticContent>
  </system.webServer>
</configuration>